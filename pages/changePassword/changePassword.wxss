/* pages/changePassword/changePassword.wxss */
/* 内容开始 */
.content {
  border-radius: 15rpx;
  padding: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.adr {
  flex: 1;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
  letter-spacing: 1;
}

.hospital{
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.time-item{
  margin-right: 20rpx;
}
.hospital-select{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #a9a9a9;
}

.time-item image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.InputUser{
  text-align: right;
  font-size: 30rpx;
  color: #a9a9a9;
  font-weight: 400;
  letter-spacing: 1;
  margin-right: 17rpx;
}

/* 按钮 */
.hover-class{
  width: 90%;
  background: #fb6600 !important;
}
