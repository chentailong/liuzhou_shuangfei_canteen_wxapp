page {
  height: 100%;
  background: #f2f2f2;
}

.take {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.home-head {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  box-shadow: 2px 2px 30px #c7ccd7;
  color: #333;
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  border: 1px solid #7b3c3c26;
  width: 90%;
  margin: 20rpx auto;
  border-radius: 20rpx;
}

.home-head .head-left{
  padding: 10rpx;
}

.home-head .head-left .head-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.home-head .head-right {
  padding: 10rpx;
  margin-left: 20rpx;
}

.home-head .head-right .head-wu {
  margin-left: 80rpx;
}

.head-right .head-date {
  line-height: 40rpx;
  margin-top: 5rpx;
}

.head-right .head-desc {
  margin-top: 5rpx;
}

.main {
  display: flex;
  overflow: hidden;
  flex: 1;
}

/* 左侧菜单栏 */

.leftmenu {
  width: 200rpx;
  box-sizing: border-box;
  background-color: #f5f6f7;
  overflow: scroll;
  z-index: 2;
  height: 100%;
}

.menu-item {
  line-height: 90rpx;
  height: 90rpx;
  text-align: center;
  border-bottom: 2rpx silid #e3e3e3;
  position: relative;
  color: #777;
  font-size: 28rpx;
}

.menu-item.active {
  color: #fb6600;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
  background: #fff;
}

.menu-item.active:before {
  position: absolute;
  left: 0;
  content: "";
  width: 8rpx;
  height: 32rpx;
  top: 29rpx;
  background: #fb6600;
}

.menu-item text.tips-num {
  position: absolute;
  top: 20rpx;
  right: 15rpx;
  border-radius: 15rpx;
  width: 30rpx;
  height: 30rpx;
  background: red;
  color: #fff;
  font-size: 25rpx;
  line-height: 30rpx;
}

/* 右侧商品栏 */
.rightcontent {
  width: 550rpx;
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 1;
}

.rightcontent .adver-map {
  width: auto;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  margin: 30rpx 20rpx 0;
}

.rightcontent .adver-map .item-a {
  display: block;
  font-size: 0;
  width: 100%;
}

.rightcontent .adver-map .item-a image {
  width: 100%;
  height: 200rpx;
}

.rightcontent .cont-item {
  padding: 0 20rpx 20rpx 20rpx;
}

.rightcontent .cont-item .show-item .more-prod-pic {
  text-align: center;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 0;
}

.rightcontent .cont-item .show-item .more-prod-pic .more-pic {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8rpx;
  vertical-align: middle;
}

.rightcontent .cont-item .show-item {
  position: relative;
  display: flex;
  justify-content: start;
  padding: 20rpx 0;
}

.rightcontent .cont-item .show-item::after {
  content: '';
  background-color: #f4f4f4;
  left: 0;
  height: 1px;
  transform-origin: 50% 100% 0;
  bottom: 0;
  position: absolute;
  display: block;
  width: 510rpx;
  padding-left: 20rpx;
}

.rightcontent .cont-item .show-item .prod-text-right {
  margin-left: 20rpx;
  width: 75%;
}

.rightcontent .cont-item .show-item .prod-text-right .cate-prod-info {
  font-size: 22rpx;
  color: #999;
  margin: 10rpx 0 20rpx 0;
}

.rightcontent .cont-item .show-item .prod-text-right .prod-text.more {
  margin: 0;
  font-size: 30rpx;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #333;
}

.rightcontent .cont-item .show-item .prod-text-right .prod-price.more {
  margin-top: 20rpx;
  font-size: 40rpx;
  color: #fb6600;
  font-weight: 700;
  font-family: arial;
}

.prod-num {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border-radius: 10rpx;
}

.prod-num text.order-item-content-num-con {
  width: 70rpx;
  height: 45rpx;
  text-align: center;
  line-height: 45rpx;
  font-size: 28rpx;
  border-right: none;
  border-left: none;
  /* border-top: 1rpx solid #e0d0b3; */
  /* border-bottom: 1rpx solid #e0d0b3; */
}

.order-item-content-num-btn {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  background-color: #fb6600;
  color: #fff;
  border-radius: 50%;
}

