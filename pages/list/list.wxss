page {
  background: #f2f2f2;
}

.home {
  display: flex;
  flex-direction: column;
}
.home-bg{
  width: 100%;
  height: 450rpx;
}
.home-head {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background: #fb6600;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.home-head .head-left .head-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
}

.home-head .head-right {
  padding: 15rpx;
  margin-left: 20rpx;
}

.home-head .head-right .head-wu {
  margin-left: 80rpx;
}

.head-right .head-date {
  line-height: 40rpx;
  margin-top: 5rpx;
}

.head-right .head-desc {
  margin-top: 5rpx;
}

/* 轮播图 */
swiper {
  margin: 20rpx 30rpx;
  /* width: 100%; */
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner-item {
  display: flex;
  flex-direction: column;
}
.img-box{
  display: flex;
  flex-direction: column;
  height: 100%;
}
swiper .banner-item .img-box .banner {
  width: 100%;
  height: 100%;
}

/* 选择 */
.choice {
  background: #fff;
  display: flex;
  flex-direction: column;
}

.choice-icon {
  display: flex;
  flex-direction: column;
}

.choice-title {
  text-align: center;
  color: #333;
  letter-spacing: 1px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.choice-left,
.choice-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 50rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.choice-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
}

.choice-desc {
  color: #666;
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

/* 内容开始 */
.content {
  box-shadow: 2px 2px 30px #c7ccd7;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
  margin-left: 15rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.adrrs {
  display: flex;
  align-items: center;
  line-height: 80rpx;
}

.adrrs image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}

.adr {
  flex: 1;
  margin-left: 20rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #333;
}

/* 箭头 */
.arrowhead {
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx solid #333;
  border-right: 2rpx solid #333;
  transform: rotate(45deg);
  margin-right: 28rpx;
}