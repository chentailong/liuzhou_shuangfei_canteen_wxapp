  flex-direction: column;
}

.price-detail-title1 image{
  width: 30rpx;
  height: 30rpx;
  padding: 40rpx;
}

.price-detail-title1{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

