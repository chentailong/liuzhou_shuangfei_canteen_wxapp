  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  background-color: #fff;
  font-size: 28rpx;
}
.pay-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.pay-item-con text{
  font-size: 34rpx;
  color: #fb6600;
  font-weight: 700;
}
.pay-item view.pay-item-con{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.pay-item-price{
  color: #fb6600;
}
.pay-item image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.content-bottom{
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.content-bottom text{
  font-size: 32rpx;
  margin-left: 50rpx;
  color: red;
}
.content-bottom .content-desc{
  margin-top: -43rpx;
}

