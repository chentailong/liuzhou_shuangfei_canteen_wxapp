page {
  height: 100%;
  background-color: #f1f1f1;
}

.time {
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}

.time-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 25rpx 0;
  font-size: 28rpx;
}

.time-item view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.time-item image {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(90deg);
}

.time-line {
  width: 4rpx;
  height: 30rpx;
  background-color: #ccc;
}

/* 优惠券 */
.container {
  margin: 20rpx;
}


.coupon-list {
  background-color: white;
  padding: 10rpx;
  margin-bottom: 30rpx;
  border-radius: 10px;
}

.coupon {
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
}

.coupon-action {
  width: 24%;
}

.coupon-info {
  flex: 1;
}

.cpupon-item {
  color: red;
  font-size: 16px;
}

.coupon-amt {
  font-size: 80rpx;
}

.coupon-title {
  font-size: 16px;
}

.coupon-desc {
  color: #999;
  margin-top: 6rpx;
}

.coupon-expire {
  color: #999;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.btn-receive {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10rpx;
}