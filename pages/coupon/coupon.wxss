page {
    height: 100%;
    background-color: #f1f1f1;
}

.time {
    background: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1rpx solid #f1f1f1;
}

.time-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 25rpx 0;
    font-size: 28rpx;
}

.time-item view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.time-item image {
    margin-left: 20rpx;
    width: 40rpx;
    height: 40rpx;
    transform: rotate(90deg);
}

.time-line {
    width: 4rpx;
    height: 30rpx;
    background-color: #ccc;
}

/* 优惠券 */
.container {
    margin: 20rpx;
}


.coupon-list {
    background-color: white;
    padding: 10rpx;
    margin-bottom: 30rpx;
    border-radius: 10px;
}

.coupon {
    background-color: white;
    border-radius: 8rpx;
    margin-bottom: 10rpx;
    padding: 10rpx;
    display: flex;
    align-items: center;
}

.coupon-action {
    width: 24%;
}

.coupon-info {
    flex: 1;
}

.cpupon-item {
    color: red;
    font-size: 16px;
}

.coupon-amt {
    font-size: 80rpx;
}

.coupon-title {
    font-size: 30rpx; 
}

.coupon-desc {
    color: #999;
    font-size: 30rpx;
    margin-top: 10rpx; 
}

.coupon-expire {
    color: #999;
    font-size: 24rpx;
    margin-top: 6rpx;
}

.btn-receive {
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 10rpx;
}

  .expired {
    display: inline-block;
    padding: 2px 6px;
    font-size: 12px;
    border-radius: 4px;
    color: black;
    text-align: center;
    background-color: red;
    margin-top: 20rpx;
  }
  
  .normal {
    display: inline-block;
    padding: 2px 6px;
    font-size: 12px;
    border-radius: 4px;
    color: white;
    margin-top: 20rpx;
    background-color: green;
  }